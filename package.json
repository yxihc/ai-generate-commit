{
  "name": "ai-generate-commit",
  "displayName": "%displayName%",
  "description": "%description%",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ai-generate-commit.generate",
        "title": "%command.title%",
        "icon": "$(sparkle)"
      },
      {
        "command": "ai-generate-commit.selectAndGenerate",
        "title": "Select Model & Generate Commit",
        "icon": "$(list-selection)"
      },
      {
        "command": "ai-generate-commit.fetchModels",
        "title": "Fetch AI Models from Provider"
      },
      {
        "command": "ai-generate-commit.configure",
        "title": "Configure AI Providers",
        "icon": "$(gear)"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "ai-generate-commit.generate",
          "group": "navigation"
        },
        {
          "command": "ai-generate-commit.selectAndGenerate",
          "group": "navigation"
        },
        {
          "command": "ai-generate-commit.configure",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "AI Generate Commit",
      "properties": {
        "ai-generate-commit.openConfigurationPage": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "%config.openConfigurationPage%"
        },
        "ai-generate-commit.config": {
          "type": "object",
          "default": {
            "providers": [],
            "defaultProviderName": "",
            "defaultModel": "",
            "language": "zh-CN",
            "customPrompt": ""
          },
          "scope": "application"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/vscode": "^1.90.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@ai-sdk/openai": "^2.0.86",
    "@ai-sdk/openai-compatible": "^1.0.29",
    "ai": "^5.0.113",
    "simple-git": "^3.30.0",
    "vscode-nls": "^5.2.0",
    "watch": "^1.0.2"
  }
}
