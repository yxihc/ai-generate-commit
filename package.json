{
  "name": "commitagent",
  "displayName": "%displayName%",
  "description": "%description%",
  "version": "0.0.5",
  "publisher": "CommitAgent",
  "icon": "logo.png",
  "engines": {
    "vscode": "^1.90.0"
  },
   "repository": {
    "type": "git",
    "url": "https://github.com/yxihc/CommitAgent.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "commitagent.generate",
        "title": "%command.title%",
        "icon": "$(sparkle)"
      },
      {
        "command": "commitagent.stopGenerate",
        "title": "Stop Generate",
        "icon": "$(debug-stop)"
      },
      {
        "command": "commitagent.selectAndGenerate",
        "title": "Select Model & Generate Commit",
        "icon": "$(list-selection)"
      },
      {
        "command": "commitagent.fetchModels",
        "title": "Fetch AI Models from Provider"
      },
      {
        "command": "commitagent.configure",
        "title": "Configure AI Providers",
        "icon": "$(gear)"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "commitagent.generate",
          "group": "navigation@1",
          "when": "!commitagent.isGenerating"
        },
        {
          "command": "commitagent.stopGenerate",
          "group": "navigation@1",
          "when": "commitagent.isGenerating"
        },
        {
          "command": "commitagent.selectAndGenerate",
          "group": "navigation@2"
        },
        {
          "command": "commitagent.configure",
          "group": "navigation@3"
        }
      ]
    },
    "configuration": {
      "title": "CommitAgent",
      "properties": {
        "commitagent.openConfigurationPage": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "%config.openConfigurationPage%"
        },
        "commitagent.config": {
          "type": "object",
          "default": {
            "providers": [],
            "defaultProviderName": "",
            "defaultModel": "",
            "language": "zh-CN",
            "commitType": "",
            "customPrompt": ""
          },
          "scope": "application"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build":"vsce package"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/vscode": "^1.90.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@ai-sdk/google": "^2.0.46",
    "@ai-sdk/openai": "^2.0.86",
    "@ai-sdk/openai-compatible": "^1.0.29",
    "ai": "^5.0.113",
    "simple-git": "^3.30.0",
    "vscode-nls": "^5.2.0",
    "watch": "^1.0.2"
  }
}
